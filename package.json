{
  "name": "faros-vscode-extension",
  "displayName": "Faros AI",
  "description": "Faros AI's Visual Studio Code extension",
  "version": "0.0.6",
  "publisher": "farosai",
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/faros-ai/faros-vscode-extension.git"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Faros AI",
      "properties": {
        "faros.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for Faros AI"
        },
        "faros.vcsUid": {
          "type": "string",
          "default": "",
          "description": "Version Control System User ID"
        },
        "faros.vcsEmail": {
          "type": "string",
          "default": "",
          "description": "Version Control System Email"
        },
        "faros.vcsName": {
          "type": "string",
          "default": "",
          "description": "Version Control System Name"
        },
        "faros.url": {
          "type": "string",
          "default": "https://prod.api.faros.ai",
          "description": "Faros AI endpoint"
        },
        "faros.graph": {
          "type": "string",
          "default": "default",
          "description": "Graph"
        },
        "faros.origin": {
          "type": "string",
          "default": "faros-vscode-extension",
          "description": "Origin"
        },
        "faros.batchSize": {
          "type": "number",
          "default": 500,
          "description": "Batch size"
        },
        "faros.batchInterval": {
          "type": "number",
          "default": 60000,
          "description": "Send batch interval"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "vsce": "vsce package",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/git-user-email": "^0.2.2",
    "@types/git-user-name": "^2.0.3",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@vscode/vsce": "^3.1.0",
    "faros-js-client": "^0.5.2",
    "git-user-email": "^0.2.2",
    "git-user-name": "^2.0.0"
  }
}
