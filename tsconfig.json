{
	"compilerOptions": {
		"jsx": "react",
		"module": "commonjs",
		"target": "ES2022",
		"lib": [
			"ES2022",
			"DOM"
		],
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "out",
		"strict": true,   /* enable all strict type-checking options */
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
